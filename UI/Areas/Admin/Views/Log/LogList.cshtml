
@{
    ViewBag.Title = "LogList";
    Layout = "~/Areas/Admin/Views/Shared/AdimnLayout.cshtml";
}

@model List<DTO.LogDTO>
<section class="content-header">
    <h1>Lista de Logs</h1>
    <ol class="breadcrumb float-sm-left"><li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Logs</a></li>
        <li class="breadcrumb-item active"><a>Lista de Logs</a></li>
    </ol>
</section>
<br />
<div class="card-footer">
    <button type="submit" class="btn btn-primary" onclick="window.location.href='/Admin/Post/PostList'">Lista de posts</button>
</div>
<div class="card">

    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Usuário</th>
                    <th>Nome da tabela</th>
                    <th>ID da tabela</th>
                    <th>Nome do processo</th>
                    <th>Data do processo</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tbody>
                    <tr id="a_@item.ID">
                        <td>@item.Username</td>
                        <td>@item.TableName</td>
                        <td>@item.TableID</td>
                        <td>@item.ProcessName</td>
                        <td>@item.ProcessDate</td>
                    </tr>

                </tbody>
            }

            <tfoot>
                <tr>
                    <th>Usuário</th>
                    <th>Nome da tabela</th>
                    <th>ID da tabela</th>
                    <th>Nome do processo</th>
                    <th>Data do processo</th>
                </tr>
            </tfoot>
        </table>
    </div>
    @Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")
    <!-- /.card-body -->
</div>
<script src="~/Areas/Admin/Content/JS/DeleteRecord.js"></script>
<!-- /.card -->
