
@model DTO.RevendedorDTO
<div class="box-body">
    <div class="form-group">
        <label>Nome do Revendedor</label>

    </div>

    <div class="form-group">
        <label>Nome do Prestador</label>
        @Html.TextBoxFor(x => x.DealerName, new { @class = "form-control", @placeholder = "Nome do Revendedor" })
        @Html.ValidationMessageFor(x => x.DealerName)
    </div>
    <div class="form-group">
        <label>Telefone</label>
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @placeholder = "Telefone" })
        @Html.ValidationMessageFor(x => x.Phone)
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "E-mail" })
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label>Data de cadastro</label>
        @Html.TextBoxFor(x => x.RegistrationDate, new { @class = "form-control", @placeholder = "Data de cadastro" })
        @Html.ValidationMessageFor(x => x.RegistrationDate)
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" name="Active" checked="@Model.Active" value="true">

        <label class="form-check-label">Revendedor ativo?</label>
    </div>
    <input type="number" hidden name="RevendedorID" value="@Model.RevendedorID" />
    <div class="card-footer">
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>

</div>