
@model DTO.PartsDTO
<div class="box-body">
    <div class="form-group">
        <label>Nome do Peça</label>

    </div>

    <div class="form-group">
            <label>Nome da peça</label>
            @Html.TextBoxFor(x => x.PartName, new { @class = "form-control", @placeholder = "Nome da peça" })
            @Html.ValidationMessageFor(x => x.PartName)
        </div>

    @*<div class="form-group">
        <label>Nome da peça</label>
        @Html.DropDownList("ServiceName", new SelectList(new[] { "Mecânica", "Elétrica", "Funilaria", "Chaveiro", "Vidraçaria" }), new { @class = "form-control select2" })
    </div>*@

    <div class="form-group">
        <label>Fabricante</label>
        @Html.TextBoxFor(x => x.Manufacturer, new { @class = "form-control", @placeholder = "Nome do fabricante" })
        @Html.ValidationMessageFor(x => x.Manufacturer)
    </div>
    <div class="form-group">
        <label>Valor da peça</label>
        @Html.TextBoxFor(x => x.Value, new { @class = "form-control", @placeholder = "Valor da peça" })
        @Html.ValidationMessageFor(x => x.Value)
    </div>
    <div class="form-group">
        <label>Prazo final</label>
        @Html.TextBoxFor(x => x.Deadline, new { @class = "form-control", @placeholder = "Prazo de entrega" })
        @Html.ValidationMessageFor(x => x.Deadline)
    </div>


    <input type="number" hidden name="ServicoID" value="@Model.PartsID" />
    <div class="card-footer">
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div></div>

