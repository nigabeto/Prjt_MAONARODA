
@model DTO.CategoryDTO
<div class="box-body">
    <div class="form-group">
        <label>Nome da Categoria</label>
        @Html.TextBoxFor(x=>x.CategoryName, new {@class="form-control", @placeholder="Nome da Categoria"})
        @Html.ValidationMessageFor(x=>x.CategoryName)
    </div>
    <input type="number" hidden value="@Model.ID"/>
    <div class="card-footer">
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</div>